{
  "name": "Translator",
  "version": "1",
  "manifest_version": 2,
  "description": "This extension allows you to fast translate any text on the page, just selecting it ",
  "content_scripts": [
    {
      "matches": [
       "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": false
    }
  ],
  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "/pics/img.png"
  },
  "options_ui": {
    "page": "instruction.html",
    "open_in_tab": false
  }
}